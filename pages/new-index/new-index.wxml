<van-row>
  <van-col span="5">
    <view class='local' bindtap='onlocalTap'>
      <l-tag shape="circle" size="large" icon-size="30" icon-name="address" plain="{{true}}">{{initCity}}</l-tag>
    </view>
  </van-col>
  <van-col span="19">
    <view class='search'>
      <van-search value="{{ invalue }}" placeholder="输入材料名称进行搜索" show-action="{{false}}" bind:search="onSearch" bind:cancel="onCancel" />
    </view>
  </van-col>
</van-row>



<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" height="10" indicator-dots="{{true}}" indicator-color="#3683d6" indicator-active-color="snow" autoplay='{{true}}'>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" style="width: 100%; height: 150px; background-color: #eeeeee;" mode='scaleToFill' />
    </swiper-item>
  </block>
</swiper>




<van-popup
  show="{{ show }}"
  position="bottom"
  overlay="{{ true }}"
  bind:close="onClose"
>
  <view class="box">
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 150px;" value="{{value}}" bindchange="bindChange">
        <picker-view-column>
            <view wx:for="{{provinces}}">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{citys}}">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{areas}}">{{item}}</view>
        </picker-view-column>
    </picker-view>
</view>
</van-popup>

<view class='list'>
<view class='titile' ><van-tag mark   type="success"  size="large" color="#3963BC" bindtap='onTabTime'>{{initYear}}{{initMonth}}份信息价</van-tag>  </view>
<view class='list-content'><view class="table">
  <view class="tr bg-w">
    <view class="th">名称</view>
    <view class="th">规格型号</view>
    <view class="th ">价格</view>
  </view>
  <scroll-view scroll-y="{{true}}" style="height: 588rpx" bindscrolltolower="onLower">
<block wx:for="{{listData}}" wx:key="{{code}}">

    <view class="tr" >
      <view class="td name" bindtap='enterDetail' data-name="{{item.name}}" style='color:#3683d6' >{{item.name}}</view>
      <view class="td" >{{item.xinghao}}</view>
      <view class="td price">
        <view wx-if="{{item.pricewithoutaxe != 0}}">{{item.pricewithoutaxe}} {{item.unit}}
          <van-tag color="#3683d6" plain="{{true}}">除税</van-tag>
        </view>
        <view wx-if="{{item.pricewithtaxe != 0}}">￥{{item.pricewithtaxe}} 元/{{item.unit}}
          <van-tag color='grey' plain="{{true}}">含税</van-tag>
        </view>
      </view>
    </view>



</block>
<l-loadmore show="{{true}}" type="loading" loading-text="努力加载中~"></l-loadmore>
</scroll-view>
</view></view>
</view>

<van-popup
  show="{{ timeShow }}"
  position="bottom"
  overlay="{{ true }}"
  bind:close="onTimeClose"
>
<van-picker columns="{{ columns }}" bind:change="onTimeChange" />
</van-popup>

<!-- toast 必须组件 -->
<van-toast id="van-toast" />