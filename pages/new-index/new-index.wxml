      <view class="td">{{item.code}}</view>
      <view class="td">{{item.text}}</view>
      <view class="td price">
        <view>{{item.date}} {{item.unit}}
          <van-tag color="#3683d6" plain="{{true}}">除税</van-tag>
        </view>
        <view>{{item.date}} {{item.unit}}
