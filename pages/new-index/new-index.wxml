<van-popup
  show="{{ show }}"
  position="bottom"
  overlay="{{ true }}"
  bind:close="onClose"
>
  <view class="box">
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 150px;" value="{{value}}" bindchange="bindChange">
        <picker-view-column>
            <view wx:for="{{provinces}}">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{citys}}">{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{areas}}">{{item}}</view>
        </picker-view-column>
    </picker-view>
</view>
</van-popup>

<view class='list'>
<view class='titile' bindtap='onTabTime'><van-tag mark   type="success"  size="large" color="#3963BC">{{initYear}}{{initMonth}}信息价</van-tag>  </view>
<view class='list-content'><view class="table">
